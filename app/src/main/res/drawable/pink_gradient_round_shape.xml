<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <solid android:color="@color/pink_material_400" />
                    <corners android:radius="@dimen/button_drawing_radius" />
                </shape>
            </item>
            <item android:bottom="0dp" android:right="@dimen/shade_button_drawing_right">
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="@color/pink_material_200" />
                    <corners android:radius="100dp" />
                    <gradient android:angle="270"
                        android:endColor="@color/pink_material_200" android:startColor="@color/pink_material_50" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>